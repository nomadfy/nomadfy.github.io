main.results
  aside.results__container
    //- Dinamic path ->
    .results__header.in-vertical-center
      a.results__text--header(href="#") Brasil
      svg.results__icon--arrow
        use(xlink:href="#icon-arrow-right")
      a.results__text--header(href="#") Santa Catarina
      svg.results__icon--arrow
        use(xlink:href="#icon-arrow-right")
      button.button--round.results__button--header
    //- Dinamic City ->
    h1.results__city Florianopolis
    nav.results__nav
      a#roteiros.results__button--nav(href="#roteiros") Roteiros
      a#pontosTuristicos.results__button--nav(href="#pontosTuristicos") Pontos turísticos
      hr.underline.underline--dark
    //- Code for each item ->
    .results__items.in-column
      .results__content.in-row
        img.results__image(src="../assets/result-test.png")
        //- Dinamic Title ->
        .results__about.in-column
          p.results__title Jurere Internacional 
          //- Dinamic Grades ->
          .results__rating.in-row
            svg.icon__star
              use(xlink:href="#icon-star")
            p.results__grade.results__grade--bold 4.8
            p.results__grade (1.024 avaliações)
          //- Dinamic Colors ->
          .results__types.in-row 
            p.results__category natureza
            p.results__category lazer

