section.modal.in-column
  header.modal__header
    p.results__text--header Título do roteiro
    input.modal__input(placeholder="Dê um nome ao seu roteiro")
    span.modal__input--value 30/48
  .in-row
    .modal__days.in-row.in-vertical-center
      p Dia 
      select.modal__select(name="choice")
        option(value="1") 1
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
        option(value="5") 5
      p de 5
    .in-column
      button#editButton.button__three.hover__around.modal__days--button
        svg.icon__three
          use(xlink:href="#icon-three-lines")
      ul#editDropdown.dropdown.dropdown__margin
        a.dropdown__item.dropdown__item--calendar
          li Editar diárias
        a.dropdown__item.dropdown__item--reorder
          li Reordenar
        a.dropdown__item.dropdown__item--delete
          li Excluir roteiro
  hr.underline.underline--shine
  ul.in-column
    //- Code for each item
    li.in-column
      .in-row
      //- Dinamic Hours ->
      span.modal__hour 8:00 às 10:00
      .in-column.is-absolute-right
        button#detailsButton.button__three.hover__around
          svg.icon__three
            use(xlink:href="#icon-three-lines")
        ul#detailsDropdown.dropdown.dropdown__margin
          a.dropdown__item.dropdown__item--details
            li Ver detalhes
          a.dropdown__item.dropdown__item--reorder
            li Reordenar
          a.dropdown__item.dropdown__item--hour
            li Alterar horário
          a.dropdown__item.dropdown__item--calendar
            li Alterar data
          a.dropdown__item.dropdown__item--delete
            li Remover ponto
      p.modal__local Jurere Internacional
      //- Dinamic Grades ->
      .results__rating.results__about.in-row
        svg.icon__star
          use(xlink:href="#icon-star")
        p.results__grade.results__grade--bold 4.8
        p.results__grade (1.024 avaliações)
      //- Dinamic Color ->
      .in-row.modal__end
        p.results__category natureza
        p.results__category lazer
  hr.underline.underline--shine
